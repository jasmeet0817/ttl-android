<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ttl_widget_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ACBECA">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/timeLeftBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="307dp"
            android:layout_height="627dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="65"
            android:progressDrawable="@drawable/circle_progressbar" />

    <ImageView
        android:id="@+id/timeLeftIcon"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:src="@drawable/ttsleep"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/timeLeftLabel"
            android:layout_width="131dp"
            android:layout_height="63dp"
            android:layout_alignStart="@+id/timeLeftBar"
            android:layout_alignEnd="@+id/timeLeftBar"
            android:layout_centerVertical="true"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="29dp"
            android:fontFamily="@font/caveat"
            android:gravity="center"
            android:text="Time Left"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/taskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
